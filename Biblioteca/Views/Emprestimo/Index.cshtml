@model IEnumerable<Biblioteca.Models.EmprestimoModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark">Lista de Empréstimos</h2>
        <a class="btn btn-primary btn-sm" href="@Url.Action("Cadastrar", "Emprestimo")">Novo Empréstimo</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead style="color: #000000; background-color: #d6d6d69e; border-radius: 1px;">
                <tr>
                    <th style="padding: .75rem; vertical-align: top; border: 1px solid #b7b7b780;">Recebedor</th>
                    <th style="padding: .75rem; vertical-align: top; border: 1px solid #b7b7b780;">Fornecedor</th>
                    <th style="padding: .75rem; vertical-align: top; border: 1px solid #b7b7b780;">Livro</th>
                    <th style="padding: .75rem; vertical-align: top; border: 1px solid #b7b7b780;">Data</th>
                    <th style="padding: .75rem; vertical-align: top; border: 1px solid #b7b7b780;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emprestimo in Model)
                {
                    <tr>
                        <td style="padding: .75rem; vertical-align: top; border: 1px solid #b7b7b780;">@emprestimo.Recebedor</td>
                        <td style="padding: .75rem; vertical-align: top; border: 1px solid #b7b7b780;">@emprestimo.Fornecedor</td>
                        <td style="padding: .75rem; vertical-align: top; border: 1px solid #b7b7b780;">@emprestimo.LivroEmprestado</td>
                        <td style="padding: .75rem; vertical-align: top; border: 1px solid #b7b7b780;">@(emprestimo.DataAtualizacao != null ? emprestimo.DataAtualizacao.Value.ToString("dd/MM/yyyy") : "")</td>
                        <td style="padding: .75rem; vertical-align: top; border: 1px solid #b7b7b780;">
                            <a class="btn btn-warning btn-sm  mt-1" href="@Url.Action("Editar", "Emprestimo", new { id = emprestimo.Id })">Editar</a>
                            <a class="btn btn-danger btn-sm  mt-1" href="@Url.Action("Excluir", "Emprestimo", new { id = emprestimo.Id })">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
