@model EmprestimoModel
@{
    ViewData["title"] = "Excluir Empréstimo";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Raleway', sans-serif;
        }

        .form-label {
            font-size: 0.875rem;
            font-family: 'Raleway', sans-serif;
            font-weight: 600;
            border-radius: 0.80rem;
        }

        .form-control, .btn {
            font-size: 0.875rem;
            font-family: 'Raleway', sans-serif;
        }

            .form-control:focus {
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
                border-color: #80bdff;
                outline: 0;
            }

        .container2 {
            max-width: 400px;
            margin: 0 auto;
            border-radius: 2rem;
            background-color: #f8f9fa;
            box-shadow: 0 4px 8px rgba(0, 0, 0.2, 0.2);
            padding: 40px;
        }

        .shadow-custom {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .btn-custom {
            font-size: 0.875rem;
            padding: 0.375rem 1rem;
            border-radius: 2rem;
        }

        .btn-margin {
            margin-right: 12.7rem;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container2 bg-white p-4 shadow-custom mt-5">

        <div class="mb- text-center">
            <h1 style="font-size: 1.5rem; font-family: 'Raleway', sans-serif;">Excluir Empréstimos</h1>
        </div>

        <form method="post" asp-controller="Emprestimo" asp-action="Excluir">
            <input type="hidden" asp-for="Id" />

            <h3 style="font-size: 1.25rem; font-family: 'Raleway', sans-serif;" class="text-dark">Tem certeza que deseja excluir?</h3>

            <div class="form-group mb-3">
                <label for="Recebedor" class="form-label">Recebedor</label>
                <input type="text" class="form-control form-control-sm" asp-for="Recebedor" disabled id="Recebedor" placeholder="Quem recebe o livro?" />
            </div>
            <div class="form-group mb-3">
                <label for="Fornecedor" class="form-label">Fornecedor</label>
                <input type="text" class="form-control form-control-sm" asp-for="Fornecedor" disabled id="Fornecedor" placeholder="Quem empresta o livro?" />
            </div>
            <div class="form-group mb-3">
                <label for="Livro" class="form-label">Livro</label>
                <input type="text" class="form-control form-control-sm" asp-for="LivroEmprestado" disabled id="Livro" placeholder="Qual o livro?" />
            </div>
            <div class="d-flex mt-5">
                <button type="submit" class="btn btn-danger btn-custom btn-margin">Excluir</button>
                <a class="btn btn-primary btn-custom" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>

</body>
</html>
